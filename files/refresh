if [ `pwd` == "/home/wilsonsc/doc/my_mods/generic" ]
then 
   echo "Wrong level"
   exit 1
fi
CART=/Users/scott/Sites/cheflink
for i in `find . -type f `
do
   if [ $i == "./refresh" -o $i == "./README.txt" ]
   then
     continue
   fi
   if [ -f $CART/$i ]
   then 
      diff -q $i $CART/$i 1>/dev/null 
      if [ $? -ne 0 ]
      then 
         echo "Updating " $i
         cp $CART/$i $i 
      fi 
   fi 
done
# echo "Looking for die calls"
# grep die `find . -name \*.php ` | grep -v norefreshlog | grep -v nolog | grep -v "Illegal Access"
echo "Looking for tsg_logger calls"
grep tsg_logger `find . -name \*.php ` | grep -v norefreshlog | grep -v nolog
~/bin/checkphp
